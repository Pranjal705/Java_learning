package algorithms.twoPointersAlgorithm;

public class TwoSum {
	 public static void main(String[] args)
	 {
		 int[] array = new int[5];
		 int n = array.length;
		 int i = 0;
		 int j = n-1;
		 int x = 0;
		 while(i<j)
		 {
			 if(array[i]+array[j]< x)
			 {
				 i++;
			 }
			 else if(array[i]+array[j]> x)
			 {
				 j--;
			 }
			 else if(array[i]+array[j] == x)
			 {
				 System.out.println("True");
			 }
			 else
			 {
				 System.out.println("False");
			 }
		 }
	 }
}
